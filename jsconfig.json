{
  "compilerOptions": {
    "checkJs": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "files": [
    "./src/shims-vue.d.ts"
  ],
  "include": [
    "src/**/*.vue",
    "src/**/*.js",
    "tests/**/*.js"
  ],
  "exclude": [
    "dist",
    "node_modules",
    ".vscode",
    "coverage",
    ".npm",
  ],
  "typeAcquisition": {
    "enable": true
  }
}